<apex:page controller="demoAcademyVisualforceController" tabStyle="Account" lightningStylesheets="true">
    <apex:form>
        <apex:pageBlock title="Demo Academy Visualforce Custom Controller">
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Account Information">
                <apex:inputField id="accountName" value="{!account.name}"/>
                <apex:inputField id="accountSite" value="{!account.type}"/>
            </apex:pageBlockSection>
       </apex:pageBlock>
    </apex:form>
</apex:page>